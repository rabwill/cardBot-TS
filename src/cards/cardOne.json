{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.4",
  "refresh": {
    "userIds": "${userIds}",
    "action": {
      "type": "Action.Execute",
      "verb": "refresh",
      "title": "Refresh",
      "data": {
        "cardId": "${cardId}"
      }
    }
  },
  "body": [
    {
      "type": "TextBlock",
      "text": "Take a moment to vote for you team mate's question",
      "size": "medium",
      "weight": "bolder",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${question}",
      "wrap": true,
      "size": "Large"
    },
    {
      "type": "ActionSet",
      "actions": [
        {
          "type": "Action.Execute",
          "title": "Vote",
          "verb": "vote",
          "data": {
            "cardId": "${cardId}"
          },
          "style": "positive"
        }
      ]
    }
  ]
}